<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Sightimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일차 : "
        android:id="@+id/T_day"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Sightimage"
        android:layout_toEndOf="@+id/Sightimage"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/T_day"
        android:layout_toEndOf="@+id/T_day"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:id="@+id/T_SightName"
        android:layout_below="@+id/T_day"
        android:layout_toRightOf="@+id/Sightimage"
        android:layout_toEndOf="@+id/Sightimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SightName"
        android:layout_below="@+id/T_day"
        android:layout_toRightOf="@+id/T_SightName"
        android:layout_toEndOf="@+id/T_SightName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 : "
        android:id="@+id/T_Time"
        android:layout_below="@+id/T_SightName"
        android:layout_toRightOf="@+id/Sightimage"
        android:layout_toEndOf="@+id/Sightimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartTime"
        android:layout_below="@+id/T_SightName"
        android:layout_toRightOf="@+id/T_Time"
        android:layout_toEndOf="@+id/T_Time" />

    <TextView
        android:text="~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/T_SightName"
        android:layout_toRightOf="@+id/StartTime"
        android:layout_toEndOf="@+id/StartTime"
        android:textSize="15dp"
        android:id="@+id/hrp2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EndTime"
        android:layout_below="@+id/T_SightName"
        android:layout_toRightOf="@+id/hrp2"
        android:layout_toEndOf="@+id/hrp2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요금 : "
        android:id="@+id/T_Cost"
        android:layout_below="@+id/T_Time"
        android:layout_toRightOf="@+id/Sightimage"
        android:layout_toEndOf="@+id/Sightimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cost"
        android:layout_toRightOf="@+id/T_Cost"
        android:layout_toEndOf="@+id/T_Cost"
        android:layout_below="@+id/T_Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모 : "
        android:id="@+id/T_Memo"
        android:layout_below="@+id/T_Cost"
        android:layout_toRightOf="@+id/Sightimage"
        android:layout_toEndOf="@+id/Sightimage" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_below="@+id/T_Cost"
        android:layout_toRightOf="@+id/T_Memo"
        android:layout_toLeftOf="@+id/edit_plan"
        android:layout_toEndOf="@+id/T_Memo"
        android:layout_toStartOf="@+id/edit_plan"
        android:id="@+id/Memo"
        android:layout_width="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:id="@+id/edit_plan"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:id="@+id/delete_plan"
        android:layout_below="@+id/edit_plan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>