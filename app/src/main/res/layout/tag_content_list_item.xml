<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/tag_sight_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/tag_sight_name"
        android:layout_above="@+id/btn_tag_recommend"
        android:layout_alignRight="@+id/tag_sight_image"
        android:layout_alignEnd="@+id/tag_sight_image"
        android:textSize="38sp"
        android:gravity="center"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn_tag_get_bucket"
        android:text="담기"
        android:layout_alignBottom="@+id/tag_sight_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn_tag_recommend"
        android:layout_alignBottom="@+id/tag_sight_image"
        android:layout_centerHorizontal="true"
        android:text="추천"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn_tag_more_info"
        android:text="더보기"
        android:layout_alignBottom="@+id/tag_sight_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>